<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:maxWidth="50dp"
            android:src="@drawable/avatar_batman" />

        <ImageView
            android:id="@+id/iconStatus"
            android:layout_width="8sp"
            android:layout_height="8sp"
            android:layout_alignBottom="@+id/imgAvatar"
            android:layout_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="-10dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/icon_online" />
    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="User01"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/Blue"
            />
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active now"
            android:textSize="15sp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnUnfriend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/red_background_border"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_person_remove_24" />

    </RelativeLayout>

</LinearLayout>