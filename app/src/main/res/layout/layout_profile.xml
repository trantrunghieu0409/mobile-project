<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_weight="3"
        android:src="@drawable/avatar_batman"
        android:padding="5dp"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/icon_user_small"
                android:layout_marginEnd="2dp"/>

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Username" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/icon_achievement_small"
                android:layout_marginEnd="2dp"/>

            <TextView
                android:id="@+id/txtAchievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Achievement" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:pointerIcon="crosshair"
            android:clickable="true">

            <ImageView android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/ic_baseline_border_color_24"
                android:layout_marginEnd="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/edit_clickable" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>