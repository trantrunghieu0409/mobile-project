<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtGameover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Game over" />
    <TextView
        android:id="@+id/txtWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="The winner is"
        android:layout_below="@+id/txtGameover"/>
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgWinner1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtWinner"/>
    <TextView
        android:id="@+id/ic_winner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgWinner1"
        android:layout_toEndOf="@+id/imgWinner1"
        android:layout_marginStart="-67dp"
        android:layout_marginBottom="-20dp"
        android:text="1"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/icon_winner1"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgWinner1"
        android:layout_below="@+id/txtWinner"
        >
        <LinearLayout
            android:id="@+id/winner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgWinner2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/avatar2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hieu"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/ic_winner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/winner2"
            android:layout_marginStart="-63dp"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@+id/winner2"
            android:background="@drawable/icon_winner2"
            android:text="2"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWinner"
        android:layout_toRightOf="@+id/imgWinner1">
        <LinearLayout
            android:id="@+id/winner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgWinner3"
            android:layout_width="87dp"
            android:layout_height="87dp"

            android:src="@drawable/avatar3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thi"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/winner3"
        android:layout_toEndOf="@+id/winner3"
        android:layout_marginStart="-60dp"
        android:layout_marginBottom="25dp"
        android:text="3"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/icon_winner3"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phong"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/ic_winner1"
        android:layout_centerInParent="true"
        android:layout_marginStart="-40dp"
        android:layout_marginBottom="-20dp"/>
</RelativeLayout>