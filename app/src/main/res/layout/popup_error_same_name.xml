<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/layout"
        android:layout_gravity="center"
        android:layout_marginStart="-300dp"
        android:layout_marginTop="-15dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/layout"
        android:background="@drawable/background_beautiful_textview"
        android:padding="5dp"
        android:text="Error"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:translationZ="90dp" />



    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profile_border"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_warning_24"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/you_are_already_in_this_room_or_someone_has_the_same_nickname_as_you"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />


        <Button
            android:id="@+id/btnOKErrorSameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/ok"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</RelativeLayout>