<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:id="@+id/txtGameover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Game over" />
    <TextView
        android:id="@+id/txtWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/the_winner_is"
        android:layout_below="@+id/txtGameover"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgWinner1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/txtWinner"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar1" />

    <TextView
        android:id="@+id/ic_winner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgWinner1"
        android:layout_marginStart="-55dp"
        android:layout_marginBottom="-20dp"
        android:layout_toEndOf="@+id/imgWinner1"
        android:background="@drawable/icon_winner1"
        android:text="1"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameWinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ic_winner1"
        android:layout_centerInParent="true"
        android:layout_marginStart="-40dp"
        android:layout_marginBottom="-20dp"
        android:text="Phong"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>